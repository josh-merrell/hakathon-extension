{
    "name": "Office Quote Extension",
    "description": "Alert a random quote from The Office!",
    "version": "1.0",
    "manifest_version": 3,

    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/Office16.png",
            "32": "/images/Office32.png",
            "48": "/images/Office48.png",
            "128": "/images/Office128.png"
        }
    },
    "icons": {
        "16": "/images/Office16.png",
        "32": "/images/Office32.png",
        "48": "/images/Office48.png",
        "128": "/images/Office128.png"
    }
}
